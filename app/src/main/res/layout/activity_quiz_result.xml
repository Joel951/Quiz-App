<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_quiz"
    tools:context=".QuizResult">

    <ImageView
        android:id="@+id/congragulations"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sucessText"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_below="@+id/congragulations"
        android:text="You've Completed the Quiz"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_below="@+id/sucessText"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/correctAnswers"
            android:textColor="#00c853"
            android:text="0"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/incorrectAnswers"
            android:textColor="#dd2c00"
            android:text="0"
            android:textSize="60dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizbtn"
        android:text="Start New Quiz"
        android:textColor="#fff"
        android:background="@drawable/round_back_green20"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>